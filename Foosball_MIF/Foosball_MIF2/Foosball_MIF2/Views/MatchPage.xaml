<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foosball_MIF2.Views.MatchPage"
             Title="MatchTime">
    <ContentPage.Content>
        <Grid
            BackgroundColor="White"
            Padding="0,20,0,0">
            <Button x:Name="Btn_HomeGoal" 
                    Grid.Row="0" 
                    Grid.ColumnSpan="2"
                    Clicked="HomeGoalProcedure" 
                    BackgroundColor="Green"
                    TextColor="White"/>
            <Button x:Name="Btn_AwayGoal" 
                    Grid.Row="1" 
                    Grid.ColumnSpan="2" 
                    Clicked="AwayGoalProcedure" 
                    BackgroundColor="Red"
                    TextColor="White"/>        
        </Grid>
    </ContentPage.Content>
</ContentPage>