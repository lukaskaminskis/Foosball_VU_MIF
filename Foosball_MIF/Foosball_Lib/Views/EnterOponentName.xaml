        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView x:Name="OpponentView" Grid.Row="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="StartMatchProcedure" Text="Start Match"/>
                            </ViewCell.ContextActions>
                        </ViewCell>
                        <TextCell Text="{Binding UserId}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Orientation="Horizontal" Grid.Row="1">
                <Button Text="Start Match" HorizontalOptions="FillAndExpand" Clicked="StartMatchProcedure" />
                <Button Text="Statistics" HorizontalOptions="FillAndExpand" Clicked="StatisticsProcedure" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>