<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Foosball_Lib.Views.UploadVisualContent">
	<ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     Padding="10">
            
           <Button Text="Take a photo"
                   BackgroundColor="Green"
                   TextColor="White"
                   FontSize="30"
                   Clicked="TakePhotoButton_OnClicked"/>
            
            <Button Text="Pick a photo"
                   BackgroundColor="Green"
                   TextColor="White"
                   FontSize="30"
                   Clicked="PickPhotoButton_OnClicked"/>

            <Button Text="Pick a video"
                   BackgroundColor="Green"
                   TextColor="White"
                   FontSize="30"
                   Clicked="PickVideoButton_OnClicked"/>
            
            <Image x:Name="MainImage" />

        </StackLayout>
	</ContentPage.Content>
</ContentPage>
